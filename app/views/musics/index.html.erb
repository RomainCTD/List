<h1>LISTE DE MUSIQUES</h1>

<img src="http://compassionmovement.org/wp-content/uploads/2016/02/Feb-web-yellow-line.png"/>

<table>
  <thead>
    <tr>
      <th colspan="1"></th>
      <th>Titre</th>
      <th>Artiste</th>
      <th>Genre</th>
      <th colspan="2"></th>
    </tr>
  </thead>
    
  <tbody>
    <div class="recherche">
      <%= form_tag(musics_path, :method => "get", id: "search-form") do %>
      <%= text_field_tag :search, params[:search], placeholder: "Titre de musique, Artiste, Genre" %>
      <%= submit_tag "🔍", :name => nil %>
      <% end %>
    </div>

    <div class="noone"
      <% if @musics.blank? %>
        <h4>Il n'y a pas de titres, artistes ou genres correspondants à : <%= params[:search] %></h4>
      <% end %>
    </div>

    <p id="notice"><%= notice %></p>

    <% @musics.each do |music| %>
      <tr>
        <td><%= link_to '⏵', music %></td>
        <td><%= music.titre %></td>
        <td><%= music.artiste %></td>
        <td><%= music.genre %></td>
        <td><%= link_to '✎', edit_music_path(music) %></td>
        <td><%= link_to '✘', music, method: :delete, data: { confirm: 'Es-tu sûr ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="plus"><%= link_to '㊉', new_music_path %></div>


