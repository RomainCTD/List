<table>
  <thead>
    <tr>
      <th colspan="1"></th>
      <th>Titre</th>
      <th>Artiste</th>
      <th>Genre</th>
      <th colspan="2"></th>
    </tr>
  </thead>
    
  <tbody>

    <div class="recherche">
      <%= form_tag(musics_path, :method => "get", id: "search-form") do %>
      <%= text_field_tag :search, params[:search], placeholder: "Votre Artiste/genre favoris" %>
      <%= submit_tag "🔍", :name => nil %>
      <% end %>
    </div>

    <div class="noone"
      <% if @musics.blank? %>
        <h4>Il n'y a pas d'artistes ou de genres correspondants à : <%= params[:search] %></h4>
      <% end %>
    </div>

    <p id="notice"><%= notice %></p>

    <% @musics.each do |music| %>
      <tr>
        <td title="Écouter"><%= link_to '⏵', music %></td>
        <td><%= music.titre %></td>
        <td><%= music.artiste %></td>
        <td><%= music.genre %></td>
        <td title="Éditer"><%= link_to '✎', edit_music_path(music) %></td>
        <div id="supp"><td title="Supprimer"><%= link_to '✘', music, method: :delete, data: { confirm: 'Es-tu sûr ?' } %></td></div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<span class="blink"><div class="plus"><%= link_to '✚', new_music_path %></div></span>